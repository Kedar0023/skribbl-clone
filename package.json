{
  "name": "skribble-clone",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:s": "turbo run dev --filter=server",
    "dev:c": "turbo run dev --filter=client"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "baseline-browser-mapping": "^2.9.19",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.17",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "module": "index.ts",
  "type": "module"
}
